<LinesList>
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: 10


<ListLine>
    orientation: 'horizontal'
    size_hint_y: None
    height: 50
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        id: line_label
        color: 0, 0, 0, 1
        text_size: self.size
        valign: 'center'
        padding_x: 30

    HoverButton:
        id: line_button
        size_hint: None, None
        size: 150, root.height
        background_normal: ''
        background_color: 40/255, 167/255, 69/255, 255/255