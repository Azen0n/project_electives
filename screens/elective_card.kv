<ElectiveCardScreen@Screen>
    name: 'elective_card'
    ElectiveCard


<ElectiveCard>
    orientation: 'vertical'
    size: root.width, root.height
    padding: 25
    spacing: 15

    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        size_hint_y: None
        height: 60

        IconButton:
            icon: 'images/left_arrow.png'
            size: 60, 60
            bg_color: 230/255, 242/255, 254/255, 255/255
            on_release: root.back_to_list()

        ElectiveCardTextInput:
            id: name
            font_size: 25
            height: 60

        IconButton:
            icon: 'images/save.png'
            size: 60, 60
            bg_color: 230/255, 242/255, 254/255, 255/255
            on_release: root.save_elective_info()

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 30, 0

        GridLayout:
            cols: 5
            spacing: 15, 5
            size_hint_y: None
            height: 65

            ElectiveCardLabel:
                text: 'Код'
                size_hint_x: 3
            ElectiveCardLabel:
                text: 'Ак. часы'
                size_hint_x: 1
            ElectiveCardLabel:
                text: 'Кол-во мест'
                size_hint_x: 1.5
            ElectiveCardLabel:
                text: 'Ответственный'
                size_hint_x: 4
            ElectiveCardLabel:
                text: 'Авторы'
                size_hint_x: 4

            ElectiveCardTextInput:
                id:code
            ElectiveCardTextInput:
                max_length: 3
                id: hours
            ElectiveCardTextInput:
                max_length: 3
                id: max_students
            ElectiveCardTextInput:
                id: in_charge
            ElectiveCardTextInput:
                id: author

        BoxLayout:
            orientation: 'vertical'

            ElectiveCardLabel:
                text: 'Аннотация'
                font_size: 20
                height: 40

            TextInput:
                id: annotation
                multiline: True
                cursor_color: 0, 0, 0, 1
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]
                        width: 1

        ElectiveCardLabel:
            id: footer
            color: 0.4, 0.4, 0.4, 1
            font_size: 12
            text_size: self.size
            valign: 'center'
            halign: 'center'
