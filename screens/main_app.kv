#:import Gradient gradient.Gradient

<MainAppScreen@Screen>
    name: 'main_app'
    MainApp

<MainApp>
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: 250
        padding: 20
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                texture: Gradient.vertical((43/255, 63/255, 105/255, 255/255), (32/255, 77/255, 176/255, 255/255))

        IconButton:
            icon: 'images/braindead_logo.png'
            bg_color: 0, 0, 0, 0
            disabled: True
            size_hint: None, None
            size: 70, 70
            icon_size: self.size[0] * 0.7, self.size[1] * 0.7

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5

            BoxLayout:
                id: icon_box
                orientation: 'vertical'
                size_hint_x: 1

            BoxLayout:
                id: text_box
                size_hint_x: 4
                orientation: 'vertical'

    ExtendedScreenManager:
        id: screen_manager

        ListOfCurrentSemesterScreen
        ElectiveCardScreen
        ListOfSemestersScreen
        ListOfSelectedSemesterScreen
        StatisticsScreen
        AlgorithmScreen

        StudentMenuScreen
        ListOfSelectedDayScreen
        PrioritiesScreen
