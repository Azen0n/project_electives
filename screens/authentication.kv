<AuthenticationScreen@Screen>
    name: 'authentication'
    Authentication


<Authentication>
    canvas.before:
        Rectangle:
            size: self.size
            pos: 0, 0
            texture: Gradient.vertical((43/255, 63/255, 105/255, 255/255), (32/255, 77/255, 176/255, 255/255))

    RelativeLayout:
        size_hint: None, None
        size: 300, 250
        pos_hint: { 'center_x': 0.5, 'center_y': 0.5 }
        canvas.before:
            Color:
                rgba: 30/255, 40/255, 78/255, 255/255
            RoundedRectangle:
                size: self.size
                pos: 0, 0
                radius: [10]

        Label:
            text: 'Введите свой ID'
            font_size: 18
            pos_hint: { 'center_y': 0.8 }

        TextInputBackground:
            size_hint: None, None
            size: 200, 50
            pos_hint: { 'center_x': 0.5, 'center_y': 0.55 }
            ElectiveCardTextInput:
                id: text_input
                font_size: 18
                border_radius: [10]

        HoverButton:
            text: 'Войти'
            size: 200, 50
            font_size: 18
            border_radius: [10]
            bg_color: 32/255, 77/255, 176/255, 255/255
            pos_hint: { 'center_x': 0.5, 'center_y': 0.3 }
            on_release: root.check_student_id(app.root, root.ids.text_input)
