<ListOfSelectedSemesterScreen@Screen>
    name: 'list_of_selected_semester'
    ListOfSelectedSemester


<ListOfSelectedSemester>
    orientation: 'vertical'
    recycleView: recycleView

    BoxLayout:
        orientation: 'horizontal'
        padding: 30
        size_hint_y: None
        height: 120
        canvas.before:
            Color:
                rgba: 43/255, 63/255, 105/255, 255/255
            Rectangle:
                size: self.size
                pos: self.pos

        IconButton:
            icon: 'images/left_arrow.png'
            size: 60, 60
            bg_color: 30/255, 40/255, 78/255, 255/255
            on_release: root.back_to_list()

        Label:
            id: title
            bold: True
            font_size: 25

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        padding: 130, 0, 60, 0
        canvas.before:
            Color:
                rgba: 242/255, 242/255, 242/255, 255/255
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'Название электива'
            color: 0, 0, 0, 1
            text_size: self.size
            valign: 'center'
        Label:
            text: 'Ак. часы'
            color: 0, 0, 0, 1
            text_size: self.size
            valign: 'center'
            size_hint_max_x: 100
        Label:
            text: 'Вместимость'
            color: 0, 0, 0, 1
            text_size: self.size
            valign: 'center'
            size_hint_max_x: 100
        Label:
            size_hint_x: 0.7

    RecycleView:
        id: recycleView
        viewclass: 'ListLine'
        scroll_type: ['bars']
        scroll_wheel_distance: 100
        bar_width: 10

        RecycleBoxLayout:
            orientation: 'vertical'
            padding: 30
            spacing: 10
            default_size: None, 100
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height