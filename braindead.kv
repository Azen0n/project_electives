Menu:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: 200

        Button:
            text: 'Меню администратора'
            size_hint_y: None
            height: 50
            on_press: root.admin_menu_button_click()

        Button:
            text: 'Меню студента'
            size_hint_y: None
            height: 50
            on_press: root.student_menu_button_click()

        Button:
            text: 'Список приоритетов'
            size_hint_y: None
            height: 50
            on_press: root.list_of_priorities_button_click()

        BoxLayout:
            orientation: 'vertical'

    ExtendedScreenManager:
        id: screen_manager

        AdminMenuScreen
        ElectiveCardScreen
        SemesterListScreen
        ListOfSelectedSemesterScreen
        StatisticsScreen

        StudentMenuScreen
        ListOfSelectedDayScreen
        ListOfPrioritiesScreen

<AdminMenuScreen@Screen>
    name: 'list_of_current_semester'
    AdminMenu

<ElectiveCardScreen@Screen>
    name: 'elective_card'
    ElectiveCard

<SemesterListScreen@Screen>
    name: 'semester_list'
    SemesterList

<ListOfSelectedSemesterScreen@Screen>
    name: 'list_of_selected_semester'
    ListOfSelectedSemester

<StatisticsScreen@Screen>
    name: 'statistics'
    Statistics

<StudentMenuScreen@Screen>
    name: 'student_menu'
    StudentMenu

<ListOfSelectedDayScreen@Screen>
    name: 'list_of_selected_day'
    ListOfSelectedDay

<ListOfPrioritiesScreen@Screen>
    name: 'list_of_priorities'
    ListOfPriorities