#:import Gradient gradient.Gradient

Menu:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: 200

        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                texture: Gradient.vertical((43/255, 63/255, 105/255, 255/255), (32/255, 77/255, 176/255, 255/255))

        Button:
            text: 'Меню администратора'
            background_color: 0, 0, 0, 0
            size_hint_y: None
            height: 50
            on_release: root.admin_menu_button_click()

        Button:
            text: 'Статистика по элективам'
            background_color: 0, 0, 0, 0
            size_hint_y: None
            height: 50
            on_release: root.statistics_button_click()

        Button:
            text: 'Меню студента'
            background_color: 0, 0, 0, 0
            size_hint_y: None
            height: 50
            on_release: root.student_menu_button_click()

        Button:
            text: 'Список приоритетов'
            background_color: 0, 0, 0, 0
            size_hint_y: None
            height: 50
            on_release: root.list_of_priorities_button_click()

        BoxLayout:
            orientation: 'vertical'

    ExtendedScreenManager:
        id: screen_manager

        ListOfCurrentSemesterScreen
        ElectiveCardScreen
        ListOfSemestersScreen
        ListOfSelectedSemesterScreen
        StatisticsScreen

        StudentMenuScreen
        ListOfSelectedDayScreen
        PrioritiesScreen






