<Statistics>
    orientation: 'vertical'
    adaptive_height: True
    size: root.width, root.height

    Label:
        id: title
        color: 0, 0, 0, 1
        font_size: 25
        size_hint_y: None
        height: 50

    GridLayout:
        cols: 2
        adaptive_height: True
        StatisticLabel:
            text: 'Выбрано первым приоритетом:'
        StatisticLabel:
            id: first
            text: '10'
        StatisticLabel:
            text: 'Выбрано вторым приоритетом:'
        StatisticLabel:
            id: second
            text: '20'
        StatisticLabel:
            text: 'Выбрано третим приоритетом:'
        StatisticLabel:
            id: third
            text: '30'
        StatisticLabel:
            text: 'Выбрано четвертым приоритетом:'
        StatisticLabel:
            id: fourth
            text: '40'
        StatisticLabel:
            text: 'Выбраном пятым приоритетом:'
        StatisticLabel:
            id: fifth
            text: '50'
        StatisticLabel:
            text: 'Средняя оценка студентов:'
        StatisticLabel:
            id: average_mark
            text: '4.56'


<StatisticLabel@Label>
    color: 0, 0, 0, 1