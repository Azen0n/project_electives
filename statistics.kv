<SemesterList>
    orientation: 'vertical'
    recycleView: recycleView

    BoxLayout:
        orientation: 'horizontal'
        padding: 30
        spacing: 20
        size_hint_y: None
        height: 120

        ImageButton:
            source: 'images/left_arrow.png'
            size_hint: None, None
            size: 60, 60
            on_press: root.back_to_list()

        Label:
            id: title
            text: 'Выберите семестр'
            color: 0, 0, 0, 1
            font_size: 25
            height: self.parent.height

    RecycleView:
        id: recycleView
        viewclass: 'ListLine'
        scroll_type: ['bars']
        scroll_wheel_distance: 100
        bar_width: 10

        RecycleBoxLayout:
            orientation: 'vertical'
            padding: 30
            spacing: 10
            default_size: None, 50
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height


