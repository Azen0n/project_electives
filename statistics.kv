<SemestersList>
    size: root.width, root.height

    BoxLayout:
        id: box_layout
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: 30
        spacing: 10

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint_y: None
            height: 60

            ImageButton:
                source: 'images/left_arrow.png'
                size_hint: None, None
                size: self.parent.height, self.parent.height
                on_press: root.back_to_list()

            Label:
                id: title
                text: 'Выберите семестр'
                color: 0, 0, 0, 1
                font_size: 25
                height: self.parent.height


