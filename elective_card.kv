<ElectiveLabel@Label>
    bold: True
    size_hint_y: None
    height: 30
    color: 0, 0, 0, 1
    background_color: 0.98, 0.98, 0.98, 1
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<ImageButton@ButtonBehavior+Image>


<ElectiveTextInput>
    size_hint_y: None
    height: 30
    halign: 'center'
    padding_y: [(self.height - self.line_height) / 2.0, 0]
    cursor_color: 0, 0, 0, 1
    multiline: False
    background_normal: ''
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]
            width: 1


<ElectiveCard>
    id: elective_card
    orientation: 'vertical'
    size: root.width, root.height
    padding: 25
    spacing: 15

    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        size_hint_y: None
        height: 60

        ImageButton:
            source: 'images/left_arrow.png'
            size_hint: None, None
            size: self.parent.height, self.parent.height
            on_press: root.back_to_list()

        ElectiveTextInput:
            id: name
            font_size: 25
            height: self.parent.height

        ImageButton:
            source: 'images/save_button.png'
            size_hint: None, None
            size: self.parent.height, self.parent.height
            on_press: root.save_elective_info()

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 30, 0

        GridLayout:
            cols: 5
            spacing: 15, 5
            size_hint_y: None
            height: 65

            ElectiveLabel:
                text: 'Код'
                size_hint_x: 3
            ElectiveLabel:
                text: 'Ак. часы'
                size_hint_x: 1
            ElectiveLabel:
                text: 'Кол-во мест'
                size_hint_x: 1.5
            ElectiveLabel:
                text: 'Ответственный'
                size_hint_x: 4
            ElectiveLabel:
                text: 'Авторы'
                size_hint_x: 4

            ElectiveTextInput:
                id:code
            ElectiveTextInput:
                max_length: 3
                id: hours
            ElectiveTextInput:
                max_length: 3
                id: max_students
            ElectiveTextInput:
                id: in_charge
            ElectiveTextInput:
                id: author

        BoxLayout:
            orientation: 'vertical'

            ElectiveLabel:
                text: 'Аннотация'
                font_size: 20
                height: 40

            TextInput:
                id: annotation
                multiline: True
                cursor_color: 0, 0, 0, 1
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]
                        width: 1

        ElectiveLabel:
            id: footer
            color: 0.4, 0.4, 0.4, 1
            font_size: 12
            text_size: self.size
            valign: 'center'
            halign: 'center'
