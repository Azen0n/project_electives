<StudentMenuButton@Button>
    text: '+'
    multiline: True
    bold: True
    border: 5,5,5,5
<StudentMenuLabel@Label>
    color: 0, 0, 0, 1

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<GradientLabel@Label+BackgroundColor>
