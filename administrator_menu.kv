<ElectiveLine>
    orientation: 'horizontal'
    size_hint_y: None
    height: 50
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        id: elective_name_label
        text: 'Логика'
        color: 0, 0, 0, 1
        text_size: self.size
        valign: 'center'
        padding_x: 30

    HoverButton:
        text: 'Редактировать'
        size_hint: None, None
        size: 150, root.height
        background_normal: ''
        background_color: 40/255, 167/255, 69/255, 255/255
        on_press: root.edit_button_click(self)


<AdministrativeMenu>
    size: root.width, root.height

    BoxLayout:
        id: box_layout
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: 30
        spacing: 10

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 50

            HoverButton:
                text: 'Статистика по элективам'
                background_normal: ''
                background_color: 40/255, 167/255, 69/255, 255/255
                on_press: root.statistics_button_click()
