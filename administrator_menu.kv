<AdminMenu>:
    orientation: 'vertical'
    recycleView: recycleView

    BoxLayout:
        orientation: 'horizontal'
        padding: 30
        spacing: 10
        size_hint_y: None
        height: self.minimum_height

        RippleElevationHoverButton:
            text: 'Статистика по элективам'
            bg_color: 40/255, 167/255, 69/255, 255/255
            on_press: root.statistics_button_click()

    RecycleView:
        id: recycleView
        viewclass: 'ListLine'
        scroll_type: ['bars']
        scroll_wheel_distance: 100
        bar_width: 10

        RecycleBoxLayout:
            orientation: 'vertical'
            padding: 30
            spacing: 10
            default_size: None, 50
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height


<RippleElevationHoverButton>:
    size_hint: None, None
    size: 400, 50
    elevation: 10
    radius: [self.height / 2]
    ripple_duration_in_slow: 0.3

    background_color: 0, 0, 0, 0
    background_normal: ''
    bg_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [self.height / 2]
