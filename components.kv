#:import pyperclip pyperclip
#:import components components

<ElectiveCardLabel@Label>
    bold: True
    size_hint_y: None
    height: 30
    color: 0, 0, 0, 1


<ElectiveCardTextInput>
    size_hint_y: None
    height: self.minimum_height
    pos_hint: { 'center_y': 0.5 }
    halign: 'center'
    background_color: 0, 0, 0, 0
    cursor_color: 0, 0, 0, 1
    multiline: False


<TextInputBackground@BoxLayout>
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rounded_rectangle: self.x, self.y, self.size[0], self.size[1], 10


<HoverButton>:
    size_hint: None, None
    elevation: 0
    border_radius: [self.height / 2]
    radius: self.border_radius
    ripple_duration_in_slow: 0.3

    background_color: 0, 0, 0, 0
    background_normal: ''
    bg_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius



<IconButton>
    icon: ''
    icon_size: self.size[0] * 0.5, self.size[1] * 0.5

    Image:
        source: root.icon
        center_x: root.center_x
        center_y: root.center_y
        size: root.icon_size


<MenuButton>
    ripple_alpha: 0
    height: 50
    text_size: self.size
    valign: 'center'


<ListLine>:
    padding: 30
    spacing: 20
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

    IconButton:
        icon: 'images/clipboard.png'
        size: 50, 50
        bg_color: 240/255, 240/255, 240/255, 255/255
        pos_hint: { 'left': 0, 'center_y': 0.5 }
        on_release: pyperclip.copy(root.ids.name.text)

    LineLabel:
        id: name
        size_hint_max_x: None
        size_hint_min_x: 50

    LineLabel:
        id: hours

    LineLabel:
        id: capacity

    IconButton:
        id: line_open_button
        icon: 'images/search.png'
        size: 50, 50
        pos_hint: { 'right': 1, 'center_y': 0.5 }
        bg_color: 230/255, 242/255, 254/255, 255/255
        on_release: root.open_button_click(self)

    HoverButton:
        id: line_button
        size: 200, 50
        pos_hint: { 'right': 1, 'center_y': 0.5 }
        color: 77/255, 121/255, 168/255, 255/255
        bg_color: 230/255, 242/255, 254/255, 255/255
        bold: True
        on_release: root.button_click(self)


<LineLabel@Label>
    color: 0, 0, 0, 1
    size_hint_y: None
    height: root.height
    size_hint_max_x: 100
    size_hint_min_x: 20
    text_size: self.size
    valign: 'center'
    pos_hint: { 'left': 0, 'center_y': 0.5 }


<DragLabel>
    color: 0, 0, 0, 1
    drag_cls: 'drag'
    canvas.before:
        Color:
            rgba: 245/255, 245/255, 245/255, 255/255
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

<RdBoxLayout@KXReorderableBehavior+BoxLayout>
    drag_classes: ['drag']

<PriorityPopup>
    background: ''
    auto_dismiss: True
    size_hint: 0.5, 0.5
    title: "Расставьте элективы по приоритетам"
    title_color: 0, 0, 0, 1
    title_size: 18
    BoxLayout:
        padding: 15, 15, 15, 0
        orientation: 'vertical'
        spacing: 10
        RdBoxLayout:
            size_hint_y: 5/6
            spacing: 10
            orientation: 'vertical'
            DragLabel:
                id: first_priority
            DragLabel:
                id: second_priority
            DragLabel:
                id: third_priority
            DragLabel:
                id: fourth_priority
            DragLabel:
                id: fifth_priority
        HoverButton:
            text: "Подтвердить"
            on_release: root.confirm(root)
            size_hint: 0.5, 1/6
            pos_hint: { 'center_x': 0.5 }
            color: 77/255, 121/255, 168/255, 255/255
            bg_color: 230/255, 242/255, 254/255, 255/255