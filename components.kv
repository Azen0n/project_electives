<ElectiveCardLabel@Label>
    bold: True
    size_hint_y: None
    height: 30
    color: 0, 0, 0, 1
    background_color: 0.98, 0.98, 0.98, 1
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<ElectiveCardTextInput>
    size_hint_y: None
    height: 30
    halign: 'center'
    padding_y: [(self.height - self.line_height) / 2.0, 0]
    cursor_color: 0, 0, 0, 1
    multiline: False
    background_normal: ''
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.pos[0], self.pos[1], self.size[0], self.size[1]
            width: 1


<ClipboardButton>
    size_hint: None, None
    radius: [self.height / 2]
    ripple_duration_in_slow: 0.3

    background_color: 0, 0, 0, 0
    background_normal: ''
    bg_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [self.height / 2]

    Image:
        source: 'images\clipboard.png'
        center_x: root.center_x
        center_y: root.center_y
        size: root.size[0] * 0.5, root.size[1] * 0.5


<RippleElevationHoverButton>:
    size_hint: None, None
    elevation: 10
    radius: [self.height / 2]
    ripple_duration_in_slow: 0.3

    background_color: 0, 0, 0, 0
    background_normal: ''
    bg_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [self.height / 2]
